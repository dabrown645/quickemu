function get_distro_info() {
    #   This function returns an associative array with keys "url", "iso", and "hash"
    #   You WILL HAVE to change this functiion for your distro
    declare -A distro_info
    if [[ ${EDITION} == "hyprland" ]]; then
        distro_info['url']="https://iso.builds.garudalinux.org/iso/latest/community"
    else
        distro_info['url']="https://iso.builds.garudalinux.org/iso/latest/garuda"
    fi
    distro_info['iso']="${EDITION}/latest.iso"
    distro_info['hash']="$(wget -q -O- "${distro_info['url']}/${distro_info['iso']}.sha256" | cut -d' ' -f1)"

    echo "${distro_info[@]@k}"
}

