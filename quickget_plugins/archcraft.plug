function get_distro_info() {
    #   This function returns an associative array with keys "url", "iso", and "hash"
    #   You WILL HAVE to change this functiion for your distro
    declare -A distro_info
    local tmpurl=""
    local fullurl=""

    tmprul=$(wget -q -S -O- --max-redirect=0 "https://sourceforge.net/projects/archcraft/files/latest/download" 2>&1 | grep -i Location | cut -d' ' -f4)
    fullrul=${tmprul%\?*}
    distro_info['url']=${fullrul%/*}
    distro_info['iso']=${fullrul##*/}
    distro_info['hash']="$(wget -q -O- "${fullrul}.sha256sum" | cut -d " " -f1)"

    for parameter in "${!distro_info[@]}"; do
        echo "${parameter} ${distro_info[$parameter]}"
    done
}

