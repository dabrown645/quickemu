function get_distro_info() {
    #   This function returns an associative array with keys "url", "iso", and "hash"
    #   You WILL HAVE to change this functiion for your distro
    declare -A distro_info
    distro_info['url']="https://sourceforge.net/projects/bodhilinux/files/${RELEASE}"
    distro_info['iso']="AlmaLinux-${RELEASE}-latest-x86_64-${EDITION}.iso"
    case ${EDITION} in
      standard) distro_info['iso']="bodhi-${RELEASE}-64.iso";;
      *) distro_info['iso']="bodhi-${RELEASE}-64-${EDITION}.iso";;
    esac
    distro_info['hash']=$(wget -q -O- "${distro_info['url']}/${distro_info['iso']}.sha256" | cut -d' ' -f1)

    echo "${distro_info[@]@k}"
}

